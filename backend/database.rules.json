{
    "rules": {
      "users": {
        ".indexOn": ["email"],
        "$uid": {
          ".read": true,
          ".write": true
        }
      },
      "tokens": {
        ".indexOn": ["userId", "createdAt"],
        "$token": {
          ".read": true,
          ".write": true
        }
      },
      "opportunities": {
        ".indexOn": ["type", "location", "createdAt"],
        "$opportunityId": {
          ".read": true,
          ".write": true
        }
      }
    }
  }